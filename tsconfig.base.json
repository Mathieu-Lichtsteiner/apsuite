{
  "compileOnSave": false,
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "useDefineForClassFields": false,
    "alwaysStrict": true,
    "suppressImplicitAnyIndexErrors": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es2022",
    "module": "es2022",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@life/fe/calendar": ["libs/frontend/feature/calendar/src/index.ts"],
      "@life/fe/ui/charts/pie": ["libs/frontend/ui/charts/pie/src/index.ts"],
      "@life/fe/utils": ["libs/frontend/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
